<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>

<body class="bg-slate-900 min-h-screen">
  <%- include('../partials/nav') %>
    <main
      class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800 py-10"
      style="width:90vw;max-width:90vw;">
      <h1 class="text-blue-400 text-5xl font-extrabold text-center mb-4 drop-shadow-2xl bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent">Welcome to Airbnb</h1>
      <p class="text-slate-300 text-xl text-center mb-10 font-light">Discover amazing places to stay</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10 w-full max-w-6xl px-4">
        <% registeredHomes.forEach(home=> { %>
          <div
            class="bg-slate-800/40 backdrop-blur-md rounded-2xl ring-1 ring-blue-500/20 shadow-2xl hover:shadow-blue-500/25 hover:shadow-2xl transform hover:-translate-y-2 hover:scale-[1.03] transition-all duration-500 ease-out min-h-[280px] w-full flex flex-col items-center p-6 border border-slate-700/50">
                          <% if (home.photoUrl) { %>
                <img src="<%= home.photoUrl %>" alt="Home photo" class="w-44 h-32 object-cover rounded-xl mb-4 shadow-lg ring-2 ring-blue-400/30"
                  onerror="this.style.display='none'" />
                <% } %>
                  <span class="text-2xl font-semibold text-blue-300 mb-3 text-center">
                    <%= home.houseName %>
                  </span>
                                  <ul class="w-full flex flex-col gap-2">
                    <% if (home.price) { %>
                      <li class="flex items-center bg-slate-700/50 backdrop-blur-sm rounded-xl px-4 py-2 text-base text-slate-200 shadow-md border border-slate-600/30">
                        <span class="font-semibold w-28 text-blue-300">Price:</span> â‚¹<%= home.price %> / night
                      </li>
                      <% } %>
                        <% if (home.location) { %>
                          <li
                            class="flex items-center bg-slate-700/50 backdrop-blur-sm rounded-xl px-4 py-2 text-base text-slate-200 shadow-md border border-slate-600/30">
                            <span class="font-semibold w-28 text-blue-300">Location:</span>
                            <%= home.location %>
                          </li>
                          <% } %>
                            <% if (home.rating) { %>
                              <li
                                class="flex items-center bg-slate-700/50 backdrop-blur-sm rounded-xl px-4 py-2 text-base text-slate-200 shadow-md border border-slate-600/30">
                                <span class="font-semibold w-28 text-yellow-400">Rating:</span>
                                <span class="text-yellow-400"><%= home.rating %></span>
                              </li>
                              <% } %>
                  </ul>
                                  <button
                    class="bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold py-3 px-8 rounded-xl shadow-lg hover:shadow-blue-500/25 transition-all duration-300 mt-4 transform hover:scale-105 backdrop-blur-sm border border-blue-500/30">Book
                    now</button>
          </div>
          <% }) %>
      </div>
    </main>
</body>

</html>