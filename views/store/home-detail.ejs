<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>
  
    <div class="home-detail-container">
      <div class="home-detail-photo">
        <% if (home.photoUrl) { %>
          <img src="<%= home.photoUrl %>" alt="Home photo" class="home-detail-img" onerror="this.style.display='none'" />
        <% } else { %>
          <div class="home-detail-img home-detail-img-placeholder">No Photo Available</div>
        <% } %>
      </div>
      <div class="home-detail-info">
        <h2 class="home-detail-title"><%= home.houseName %></h2>
        <ul class="home-detail-list">
          <% if (home.price) { %>
            <li><span class="label">Price:</span> â‚¹<%= home.price %> / night</li>
          <% } %>
          <% if (home.location) { %>
            <li><span class="label">Location:</span> <%= home.location %></li>
          <% } %>
          <% if (home.rating) { %>
            <li><span class="label">Rating:</span> <%= home.rating %></li>
          <% } %>
          <li><span class="label">Type:</span> Entire Apartment</li>
          <li><span class="label">Max Guests:</span> 4</li>
          <li><span class="label">Amenities:</span> Free WiFi, Kitchen, Air Conditioning, Washer</li>
          <li><span class="label">Host:</span> John Doe</li>
          <li><span class="label">Description:</span> A beautiful, cozy home perfect for families and travelers. Enjoy a comfortable stay with all modern amenities and a great location!</li>
        </ul>
      <div style="display: flex; gap: 1rem; width: 100%; max-width: 320px; margin-top: 2rem;">
        <button class="btn-navbar home-detail-action-btn">Book Now</button>
        <div style="width: 100%;">
          <%- include('../partials/favourite') %>
        </div>
      </div>
    <style>
      .home-detail-action-btn {
        width: 100%;
        min-width: 120px;
        max-width: 160px;
      }
      .home-detail-action-btn + div > form,
      .home-detail-action-btn + div > button,
      .home-detail-action-btn + div > a {
        width: 100%;
        min-width: 120px;
        max-width: 160px;
        display: inline-block;
      }
      .home-detail-action-btn,
      .home-detail-action-btn + div > * {
        box-sizing: border-box;
      }
    </style>
        


      </div>
    </div>
    <style>
      .home-detail-container {
        display: flex;
        flex-direction: row;
        gap: 2.5rem;
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 2px 16px rgba(0,0,0,0.08);
        padding: 2.5rem 2rem;
        max-width: 900px;
        margin: 2rem auto;
        width: 100%;
      }
      .home-detail-photo {
        flex: 1 1 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 0;
      }
      .home-detail-img {
        width: 100%;
        max-width: 340px;
        height: 260px;
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.10);
        background: #f3f4f6;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: #888;
      }
      .home-detail-img-placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f3f4f6;
        color: #888;
        font-size: 1.1rem;
        height: 260px;
        width: 100%;
        border-radius: 1rem;
      }
      .home-detail-info {
        flex: 1 1 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-width: 0;
      }
      .home-detail-title {
        font-size: 2rem;
        color: #e54e52;
        font-weight: 700;
        margin-bottom: 1.2rem;
      }
      .home-detail-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.7rem;
      }
      .home-detail-list .label {
        font-weight: 600;
        color: #444;
        margin-right: 0.5rem;
      }
      @media (max-width: 800px) {
        .home-detail-container {
          flex-direction: column;
          padding: 1.2rem 0.5rem;
        }
        .home-detail-photo, .home-detail-info {
          width: 100%;
        }
        .home-detail-img, .home-detail-img-placeholder {
          max-width: 100%;
          height: 200px;
        }
      }
    </style>
 
</body>
</html>

