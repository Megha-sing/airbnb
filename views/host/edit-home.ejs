<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>
  <main style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 60vh; background: #f8fafc; padding: 2.5rem 0; width:90vw;max-width:90vw;">

      <h1 style="color: #ff5a5f; font-size: 2.2rem; text-align: center; margin-bottom: 2.2rem;"><%= editing ? "Edit" : "Register"%> your home here:</h1>
      <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST"
 style="display: flex; flex-direction: column; align-items: center; gap: 1.2rem; padding: 2rem 2rem 2.5rem 2rem; border-radius: 10px; width: 75vw; max-width: 900px; min-width: 320px;">
         <input type="hidden" name="id" value="<%= editing ? home.id : ''%>" />
        <input type="text" name="houseName"
        value="<%= editing ? home.houseName : ''%>" 
        placeholder="Enter the name of your house" style="padding: 0.75rem 1.5rem; border-radius: 6px; border: 1.5px solid #ccc; width: 100%; max-width: 400px; font-size: 1.15rem;" required/>
        <input type="text" name="price" value="<%= editing ? home.price : ''%>" placeholder="Enter the price per night" style="padding: 0.75rem 1.5rem; border-radius: 6px; border: 1.5px solid #ccc; width: 100%; max-width: 400px; font-size: 1.15rem;" required/>
        <input type="text" name="location"  value="<%= editing ? home.location : ''%>" placeholder="Enter the location of your house" style="padding: 0.75rem 1.5rem; border-radius: 6px; border: 1.5px solid #ccc; width: 100%; max-width: 400px; font-size: 1.15rem;" required/>
        <input type="text" name="rating"   value="<%= editing ? home.rating : ''%>" placeholder="Enter the rating of your house" style="padding: 0.75rem 1.5rem; border-radius: 6px; border: 1.5px solid #ccc; width: 100%; max-width: 400px; font-size: 1.15rem;" required/>
        <input type="text" name="photoUrl" value="<%= editing ? home.photoUrl : ''%>" placeholder="Enter the photo URL" style="padding: 0.75rem 1.5rem; border-radius: 6px; border: 1.5px solid #ccc; width: 100%; max-width: 400px; font-size: 1.15rem;" required/>
        <input type="submit" value="<%= editing ? "Update Home" : "Add Home"%>" style="background-color: #ff5a5f; color: white; font-weight: bold; border: none; border-radius: 4px; padding: 0.5rem 2rem; cursor: pointer; font-size: 1rem; transition: background-color 0.3s;"/>
      </form>
    </div>
  </main>
 
</body>
</html>