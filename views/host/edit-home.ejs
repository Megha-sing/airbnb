<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>

<body class="bg-slate-100 min-h-screen">
  <%- include('../partials/nav') %>

    <main class="flex flex-col items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl sm:text-4xl font-bold text-center text-red-500 mb-8">
        <%= editing ? "Edit" : "Register" %> Your Home on AirBnB
      </h1>

      <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" enctype="multipart/form-data"
        class="bg-white w-full max-w-xl rounded-2xl shadow-xl p-8 space-y-6">

        <input type="hidden" name="id" value="<%= editing ? home._id : '' %>" />

        <!-- House Name -->
        <input type="text" name="houseName" value="<%= editing ? home.houseName : '' %>"
          placeholder="Enter your House Name"
          class="w-full px-4 py-3 border border-gray-300 rounded-md text-lg focus:outline-none focus:ring-2 focus:ring-red-400"
          required />

        <!-- Price -->
        <input type="text" name="price" value="<%= editing ? home.price : '' %>" placeholder="Price Per Night"
          class="w-full px-4 py-3 border border-gray-300 rounded-md text-lg focus:outline-none focus:ring-2 focus:ring-red-400"
          required />

        <!-- Location -->
        <input type="text" name="location" value="<%= editing ? home.location : '' %>" placeholder="Location"
          class="w-full px-4 py-3 border border-gray-300 rounded-md text-lg focus:outline-none focus:ring-2 focus:ring-red-400"
          required />

        <!-- Rating -->
        <input type="text" name="rating" value="<%= editing ? home.rating : '' %>" placeholder="Rating"
          class="w-full px-4 py-3 border border-gray-300 rounded-md text-lg focus:outline-none focus:ring-2 focus:ring-red-400"
          required />

        <!-- Image Upload -->
        <input type="file" name="photo" accept="image/jpg, image/jpeg, image/png"
          class="w-full px-4 py-3 border border-gray-300 rounded-md bg-gray-50 text-gray-600 focus:outline-none" />

        <!-- Description -->
        <textarea name="description" placeholder="Describe your home"
          class="w-full px-4 py-3 border border-gray-300 rounded-md text-lg focus:outline-none focus:ring-2 focus:ring-red-400 h-28 resize-none"><%= editing ? home.description : '' %></textarea>

        <!-- Submit Button -->
        <input type="submit" value="<%= editing ? 'Update Home' : 'Add Home' %>"
          class="w-full bg-red-500 text-white font-semibold py-3 rounded-md hover:bg-red-600 transition duration-300 cursor-pointer text-lg" />
      </form>
    </main>

</body>

</html>