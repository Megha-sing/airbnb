<%- include('../partials/head') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body class="bg-slate-900 text-slate-200">
    <%- include('../partials/nav') %>

      <main
        class="container mx-auto mt-8 p-8 bg-slate-800/40 backdrop-blur-md rounded-2xl shadow-2xl shadow-blue-500/10 max-w-2xl border border-slate-700/50">
        <h1
          class="text-4xl font-bold mb-6 text-center text-blue-300 border-b border-slate-600/50 pb-4 bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent">
          Create Your Account
        </h1>

        <form action="/signup" method="POST" class="max-w-md mx-auto">
          <%- include('../partials/error') %>

            <!-- Name fields -->
            <div class="flex flex-col md:flex-row gap-4 mb-5">
              <div class="flex-1">
                <label for="firstName" class="block text-sm font-medium text-slate-300 mb-1">First Name</label>
                <div class="relative">
                  <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-blue-400">
                    <i class="fas fa-user"></i>
                  </span>
                  <input type="text" id="firstName" name="firstName" placeholder="John"
                    value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                    class="w-full pl-10 px-4 py-3 bg-slate-700/50 border border-slate-600/50 rounded-xl text-slate-200 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition backdrop-blur-sm"
                    required />
                </div>
              </div>

              <div class="flex-1">
                <label for="lastName" class="block text-sm font-medium text-slate-300 mb-1">Last Name</label>
                <div class="relative">
                  <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-blue-400">
                    <i class="fas fa-user"></i>
                  </span>
                  <input type="text" id="lastName" name="lastName" placeholder="Doe"
                    value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                    class="w-full pl-10 px-4 py-3 bg-slate-700/50 border border-slate-600/50 rounded-xl text-slate-200 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition backdrop-blur-sm" />
                </div>
              </div>
            </div>

            <!-- Email -->
            <div class="mb-5">
              <label for="email" class="block text-sm font-medium text-slate-300 mb-1">Email Address</label>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-blue-400">
                  <i class="fas fa-envelope"></i>
                </span>
                <input type="email" id="email" name="email" placeholder="your.email@example.com"
                  value="<%= oldInput.email ? oldInput.email : '' %>"
                  class="w-full pl-10 px-4 py-3 bg-slate-700/50 border border-slate-600/50 rounded-xl text-slate-200 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition backdrop-blur-sm"
                  required />
              </div>
            </div>

            <!-- Password -->
            <div class="mb-5">
              <label for="password" class="block text-sm font-medium text-slate-300 mb-1">Password</label>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-blue-400">
                  <i class="fas fa-lock"></i>
                </span>
                <input type="password" id="password" name="password" placeholder="Enter Your Password"
                  class="w-full pl-10 px-4 py-3 bg-slate-700/50 border border-slate-600/50 rounded-xl text-slate-200 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition backdrop-blur-sm"
                  required />
              </div>
            </div>

            <div class="mb-5">
              <label for="confirmPassword" class="block text-sm font-medium text-slate-300 mb-1">Confirm
                Password</label>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-blue-400">
                  <i class="fas fa-lock"></i>
                </span>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Your Password"
                  class="w-full pl-10 px-4 py-3 bg-slate-700/50 border border-slate-600/50 rounded-xl text-slate-200 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition backdrop-blur-sm"
                  required />
              </div>
            </div>

            <!-- User Type -->
            <div class="mb-5 p-4 bg-slate-700/30 border border-slate-600/50 rounded-lg">
              <p class="text-sm font-medium text-slate-300 mb-2">I want to register as:</p>
              <div class="flex gap-6">
                <label class="inline-flex items-center cursor-pointer text-slate-200">
                  <input type="radio" name="userType" value="guest" id="guest"
                    class="form-radio text-blue-500 focus:ring-blue-500" <% if (oldInput.userType==="guest" ) { %>
                  checked <% } %> />
                    <span class="ml-2">Guest</span>
                </label>
                <label class="inline-flex items-center cursor-pointer text-slate-200">
                  <input type="radio" name="userType" value="host" id="host"
                    class="form-radio text-blue-500 focus:ring-blue-500" <% if (oldInput.userType==="host" ) { %>
                  checked <% } %> />
                    <span class="ml-2">Host</span>
                </label>
              </div>
            </div>

            <!-- Terms -->
            <div class="mb-6">
              <label class="inline-flex items-center cursor-pointer">
                <input type="checkbox" name="terms" id="terms" class="form-checkbox text-blue-500 focus:ring-blue-500"
                  required />
                <span class="ml-2 text-slate-300">I agree to the <a href="#" class="text-blue-400 hover:underline">terms
                    and conditions</a></span>
              </label>
            </div>

            <!-- Submit Button -->
            <button type="submit"
              class="w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white py-3 rounded-xl shadow-lg hover:shadow-blue-500/25 focus:ring-4 focus:ring-blue-400/50 font-medium transition duration-300 flex items-center justify-center transform hover:scale-[1.02] backdrop-blur-sm border border-blue-500/30">
              <span>Register</span>
              <i class="fas fa-arrow-right ml-2"></i>
            </button>

            <!-- Login Redirect -->
            <p class="text-center mt-6 text-slate-300">
              Already have an account? <a href="/login"
                class="text-blue-400 hover:text-blue-300 hover:underline transition">Log in</a>
            </p>
        </form>
      </main>
  </body>

  </html>