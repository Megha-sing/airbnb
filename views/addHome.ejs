<%- include('partials/head') %>
<body>
  <%- include('partials/nav') %>
  <main style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 60vh;">
    <h1 style="color: #ff5a5f; font-size: 2rem; text-align: center; margin-bottom: 2rem;">Register your home here:</h1>
    <form action="/host/add-home" method="POST" style="display: flex; flex-direction: column; align-items: center; gap: 1rem; background: #fff; padding: 2rem 2rem 2.5rem 2rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); min-width: 320px;">
      <input type="text" name="houseName" placeholder="Enter the name of your house" style="padding: 0.5rem 1rem; border-radius: 4px; border: 1px solid #ccc; width: 100%; max-width: 250px;" required/>
      <input type="submit" value="Submit" style="background-color: #ff5a5f; color: white; font-weight: bold; border: none; border-radius: 4px; padding: 0.5rem 2rem; cursor: pointer; font-size: 1rem; transition: background-color 0.3s;"/>
    </form>
  </main>
 
</body>
</html>