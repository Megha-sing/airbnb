<header class="bg-slate-900 text-white shadow-md sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 py-3">
    <div class="flex items-center justify-between">

      <!-- LEFT: Logo + Links -->
      <div class="flex items-center gap-6">
        <a href="/" class="text-2xl font-bold text-white hover:text-red-400 transition">airbnb</a>

        <% if (isLoggedIn && user && user.userType==='guest' ) { %>

          <a href="/favourites" class="hover:text-red-400 transition">Favourites</a>
          <a href="/bookings" class="hover:text-red-400 transition">Bookings</a>
          <% } else if (isLoggedIn && user && user.userType==='host' ) { %>
            <a href="/host/host-home-list" class="hover:text-red-400 transition">Host Homes</a>
            <a href="/host/add-home" class="hover:text-red-400 transition">Add Home</a>
            <% } %>
      </div>

      <!-- RIGHT: Auth Buttons -->
      <div class="flex items-center gap-4">
        <% if (!isLoggedIn) { %>
          <a href="/signup" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition">Sign Up</a>
          <a href="/login" class="bg-white text-red-600 px-4 py-2 rounded hover:bg-gray-100 transition">Login</a>
          <% } else { %>
            <form action="/logout" method="POST">
              <button type="submit" class="bg-red-500 px-4 py-2 rounded hover:bg-red-600 transition text-white">
                Logout
              </button>
            </form>
            <% } %>
      </div>
    </div>
  </nav>
</header>