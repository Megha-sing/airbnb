<% if (errors.length> 0) { %>
  <div class="relative bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-lg mb-6 shadow-md" role="alert">
    <div class="flex items-start justify-between">
      <div>
        <strong class="block font-bold text-red-800 mb-1">There were some problems:</strong>
        <ul class="list-disc list-inside space-y-1 text-sm text-red-700">
          <% errors.forEach(error=> { %>
            <li>
              <%= error %>
            </li>
            <% }) %>
        </ul>
      </div>
      <span class="text-red-500 hover:text-red-700 cursor-pointer ml-4">
        <i class="fas fa-times"></i>
      </span>
    </div>
  </div>
  <% } %>