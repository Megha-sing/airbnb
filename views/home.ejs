<%- include('partials/head') %>
<body>
<%- include('partials/nav') %>
  <main class="flex flex-col items-center justify-center min-h-screen bg-gray-50 py-10">
    <h1 class="text-red-600 text-4xl font-extrabold text-center mb-4">Welcome to Airbnb</h1>
    <p class="text-gray-700 text-xl text-center mb-8">Explore our listings!</p>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10 w-full max-w-6xl px-4">
      <% registeredHomes.forEach(home => { %>
        <div class="bg-white rounded-3xl shadow-2xl p-8 flex flex-col items-center border border-gray-200 hover:shadow-3xl transition duration-300 min-h-[160px] min-w-[240px] mb-6">
          <span class="text-2xl font-bold text-red-800 mb-3"><%= home.houseName %></span>
        </div>
      <% }) %>
    </div>
  </main>
  
</body>
</html>